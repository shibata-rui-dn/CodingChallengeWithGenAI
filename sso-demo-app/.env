# バッジ管理デモアプリケーション 環境設定

# サーバー設定
NODE_ENV=development
PORT=3000

# SSO認証サーバー設定
SSO_AUTH_SERVER=http://localhost:3303

# OAuth 2.0 設定
OAUTH_CLIENT_ID=demo-client
OAUTH_CLIENT_SECRET=demo-secret-change-in-production
OAUTH_REDIRECT_URI=http://localhost:3000/oauth/callback

# JWT設定
JWT_SECRET=demo-jwt-secret-change-in-production-use-256-bit-key

# データベース設定
DATABASE_PATH=./database/badge_demo.db

# ログ設定
LOG_LEVEL=info
